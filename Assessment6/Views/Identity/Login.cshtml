@{
    ViewBag.Title = "Login Page";
}

@model Assessment6.Models.LoginModel

<h2>User Login</h2>

@using (Html.BeginForm("Login", "Identity", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group required">
        <label class='control-label'>Email</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required", placeholder = "Enter Email" })
    </div>
    <div class="form-group required">
        <label class='control-label'>Password</label>
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required", placeholder = "Enter Password" })
    </div>
    <br />

    <input type="submit" class="btn btn-info btn-lg" />
}

